<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.game.siwasu17.life_timer" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="人生の残り時間タイマー"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LifeSettingPrefActivity" >
        </activity>

        <receiver android:name=".LifeTimerAppWidget" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/life_timer_app_widget_info" />
        </receiver>
        <receiver
            android:name=".WidgetUpdateAlermReceiver"
            android:enabled="true"
            android:exported="true" >
        </receiver>
    </application>

</manifest>
